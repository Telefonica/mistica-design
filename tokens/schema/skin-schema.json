    "light": {
      "comment": "Aquí se obliga a usar las constantes definidas para light mode",
      "allOf": [{ "$ref": "#/global/constants" }]
    },
    "dark": {
      "comment": "Aquí se obliga a usar las constantes definidas para dark mode",
      "allOf": [{ "$ref": "#/global/constants" }]
    }
