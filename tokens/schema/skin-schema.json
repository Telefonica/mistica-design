  "definitions": {
    "comment": "Aquí se define el formato de un color o de una constante.",
    "paletteProperties": {
      "patternProperties": {
        "value": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "type": {
          "const": "color"
        }
      },
      "required": ["value", "type"]
    },
    "constantProperties": {
      "patternProperties": {
        "value": {
          "type": "string",
          "pattern": "([{]{1})+([^{])+([^}])+([})])$"
        },
        "type": {
          "const": "color"
        },
        "description": {
          "type": "string",
          "pattern": "^[^{}]+$"
        }
      },
      "required": ["value", "type", "description"],
      "additionalProperties": false
    }
  }
